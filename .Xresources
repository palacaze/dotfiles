! reload with: xrdb -load ~/.Xresources

! ## COLORS {{{
#include ".Xresources.d/solarized.colors"
! }}}

! ## FONTS {{{
#define FIXED -misc-fixed-medium-r
#define UTFENC iso10646-1
#define TERMINUS12 -*-terminus-medium-r-normal--12-*-*-*-c-*-UTFENC
#define TERMINUS14 -*-terminus-medium-r-normal--14-*-*-*-c-*-UTFENC
#define TERMINUS16 -*-terminus-medium-r-normal--16-*-*-*-c-*-UTFENC
#define DEJA14     xft:DejaVu Sans Mono:pixelsize=14
#define DEJABOLD14 xft:DejaVu Sans Mono:style=bold:pixelsize=14
! }}}

! ## XFT {{{
Xft.dpi:       98
Xft.lcdfilter: lcddefault
Xft.autohint:  false
Xft.hintstyle: hintfull
Xft.hinting:   true
Xft.antialias: true
Xft.rgba:      rgb
! }}}

! ## XTERM {{{
XTerm*faceName: DejaVu Sans Mono:pixelsize=14

XTerm*background: #002b36
XTerm*foreground: #839496
XTerm*fading: 40
XTerm*fadeColor: #002b36
XTerm*cursorColor: #93a1a1
XTerm*pointerColorBackground: #586e75
XTerm*pointerColorForeground: #93a1a1

XTerm*color0: #073642
XTerm*color1: #dc322f
XTerm*color2: #859900
XTerm*color3: #b58900
XTerm*color4: #268bd2
XTerm*color5: #d33682
XTerm*color6: #2aa198
XTerm*color7: #eee8d5
XTerm*color9: #cb4b16
XTerm*color8: #002b36
XTerm*color10: #586e75
XTerm*color11: #657b83
XTerm*color12: #839496
XTerm*color13: #6c71c4
XTerm*color14: #93a1a1
XTerm*color15: #fdf6e3
! }}}

! ## URXVT {{{
URxvt.font:     DEJA14
URxvt.boldfont: DEJABOLD14

URxvt.meta8:              false
URxvt.intensityStyles:    false
URxvt.depth:              32
URxvt.cursorBlink:        1
URxvt.cursorUnderline:    false
URxvt.iso14755:           false
URxvt.iso14755_52:        false
URxvt.saveLines:          100000
URxvt.scrollTtyKeypress:  true
URxvt.scrollTtyOutput:    false
URxvt.scrollWithBuffer:   false
URxvt.scrollBar:          false
URxvt.loginShell:         true
URxvt.borderless:         true
URxvt.internalBorder:     0
URxvt.secondaryScroll:    true
URxvt.secondaryWheel:     true
URxvt.mapAlert:           true
URxvt.utmpInhibit:        true
URxvt.urgentOnBell:       false
URxvt.perl-ext-common:    default,matcher,-searchable-scrollback,-option-popup,-selection-popup,-readline
URxvt.url-launcher:       firefox
URxvt.matcher.button:     1

! change font with Ctrl-Fn keys
URxvt*keysym.C-F1: command:\033]710;DEJA14\007
URxvt*keysym.C-F2: command:\033]710;xft:DejaVu Sans Mono:pixelsize=9\007
URxvt*keysym.C-F3: command:\033]710;xft:DejaVu Sans Mono:pixelsize=10\007
URxvt*keysym.C-F4: command:\033]710;xft:DejaVu Sans Mono:pixelsize=11\007
URxvt*keysym.C-F5: command:\033]710;xft:DejaVu Sans Mono:pixelsize=12\007
URxvt*keysym.C-F6: command:\033]710;xft:DejaVu Sans Mono:pixelsize=13\007
URxvt*keysym.C-F7: command:\033]710;xft:DejaVu Sans Mono:pixelsize=16\007
URxvt*keysym.C-F8: command:\033]710;xft:DejaVu Sans Mono:pixelsize=18\007
URxvt*keysym.C-F9: command:\033]710;xft:DejaVu Sans Mono:pixelsize=20\007
URxvt*keysym.C-F10:command:\033]710;FIXED-normal--12-*-*-*-c-*-UTFENC\007
URxvt*keysym.C-F11:command:\033]710;TERMINUS12\007
URxvt*keysym.C-F12:command:\033]710;TERMINUS14\007

! make some key combinations work
URxvt.keysym.S-Up:      \033[1;2A
URxvt.keysym.S-Down:    \033[1;2B
URxvt.keysym.S-Right:   \033[1;2C
URxvt.keysym.S-Left:    \033[1;2D
URxvt.keysym.S-Home:    \033[1;2H
URxvt.keysym.S-End:     \033[1;2F
URxvt.keysym.C-Up:      \033[1;5A
URxvt.keysym.C-Down:    \033[1;5B
URxvt.keysym.C-Right:   \033[1;5C
URxvt.keysym.C-Left:    \033[1;5D
URxvt.keysym.C-S-Up:    \033[1;6A
URxvt.keysym.C-S-Down:  \033[1;6B
URxvt.keysym.C-S-Right: \033[1;6C
URxvt.keysym.C-S-Left:  \033[1;6D
! }}}

! ## XCURSOR {{{
Xcursor.theme: Vanilla-DMZ
Xcursor.size:  16
! }}}

! ## XSCREENSAVER {{{
xscreensaver.dpmsEnabled:               true
xscreensaver.splash:                    false
xscreensaver.ignoreUninstalledPrograms: true
xscreensaver.loadURL:                   firefox '%s'
xscreensaver.captureStderr:             false
xscreensaver.overlayStderr:             false

xscreensaver.Dialog.headingFont:        DEJABOLD14
xscreensaver.Dialog.bodyFont:           DEJA14
xscreensaver.Dialog.labelFont:          DEJA14
xscreensaver.Dialog.unameFont:          DEJA14
xscreensaver.Dialog.buttonFont:         DEJABOLD14
xscreensaver.Dialog.dateFont:           DEJA14
xscreensaver.passwd.passwdFont:         DEJABOLD14

xscreensaver.Dialog.foreground:         #DDDDDD
xscreensaver.Dialog.background:         #353535
xscreensaver.Dialog.topShadowColor:     #353535
xscreensaver.Dialog.bottomShadowColor:  #353535
xscreensaver.Dialog.Button.foreground:  #FEA63C
xscreensaver.Dialog.Button.background:  #353535

xscreensaver.Dialog.text.foreground:    #B7CE42
xscreensaver.Dialog.text.background:    #353535
xscreensaver.Dialog.internalBorderWidth:24
xscreensaver.Dialog.borderWidth:        10
xscreensaver.Dialog.shadowThickness:    2

xscreensaver.passwd.thermometer.foreground: #FEA63C
xscreensaver.passwd.thermometer.background: #353535
xscreensaver.passwd.thermometer.width:      16
! }}}
